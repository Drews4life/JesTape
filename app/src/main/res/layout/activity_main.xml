<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/buttonWeapon"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_alignBaseline="@+id/buttonEquipment"
        android:layout_alignBottom="@+id/buttonEquipment"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:text="weaponry" />

    <Button
        android:id="@+id/buttonEquipment"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="equipment" />

    <Button
        android:id="@+id/buttonCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonWeapon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:text="calendar" />

</RelativeLayout>